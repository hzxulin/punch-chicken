.container {
    position: relative;
    background: #0187fa;
    min-height: 100vh;
}
.rank-bg {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    z-index: 1;
    width: 750rpx;
    height: 500rpx;
}
.back-btn-area {
    position: fixed;
    left: 30rpx;
    z-index: 9999;
}
.back-btn {
    width: 48rpx;
    height: 48rpx;
}
.rank-list {
    position: relative;
    z-index: 3;
    background: #fff;
    width: 750rpx;
    display: block;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
}
.rank-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx 30rpx;
}
.item-icon {
    width: 58rpx;
    height: 48rpx;
    text-align: center;
    font-size: 38rpx;
    line-height: 48rpx;
    color: #666;
}
.item-icon.first {
    transform: scale(1.3) rotate(-10deg);
}
.item-icon.second {
    transform: scale(1.1);
}
.item-avatar {
    margin-left: 20rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}
.item-name {
    margin-left: 20rpx;
    font-size: 28rpx;
    line-height: 32rpx;
    padding-top: 8rpx;
    color: #333;
    white-space: nowrap;
    width: 260rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}
.item-times {
    position: absolute;
    right: 30rpx;
    width: 240rpx;
    color: #999;
    font-size: 30rpx;
    text-align: right;
}
.item-times .times {
    color: #fa9813;
    margin: 0 4rpx;
    font-size: 36rpx;
    font-weight: 600;
}
.rank-tip {
    text-align: center;
    color: #bbb;
    font-size: 26rpx;
    padding: 20rpx 0;
}

.rank-empty {
    position: relative;
    z-index: 3;
    background: #fff;
    width: 750rpx;
    display: block;
    border-radius: 30rpx;
    text-align: center;
    padding: 100rpx 0;
}

.rank-empty .icon {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}
.rank-empty .tip {
  margin-top: 30rpx;
  display: block;
  vertical-align: middle;
  font-size: 32rpx;
  line-height: 34rpx;
  color: #909090;
  text-align: center;
}
.rank-end {
    text-align: center;
    position: relative;
    z-index: 3;
    width: 750rpx;
    display: block;
    border-radius: 30rpx;
    text-align: center;
    padding: 100rpx 0;
}
.rank-end .tip {
  display: inline-block;
  vertical-align: middle;
  font-size: 32rpx;
  line-height: 34rpx;
  color: #fff;
}