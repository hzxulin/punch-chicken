.container {
  background: #f7f7f7;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 40rpx 40rpx 30rpx;
}
.history-list {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.history-item {
  display: block;
  margin-bottom: 30rpx;
  position: relative;
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
}
.history-content {
  position: relative;
  background: #fff;
}
.history-del {
  position: absolute;
  left: 100%;
  top: 0;
  width: 660rpx;
  height: 100%;
  background: #f00;
  display: flex;
  justify-content: center;
  align-items: center;
}
.history-del .icon-del {
  position: absolute;
  left: 45rpx;
  top: 50%;
  margin-top: -35rpx;
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
}
.history-line {
  position: absolute;
  left: 0;
  top: 0;
  width: 10rpx;
  height: 100%;
}
.history-info {
  position: relative;
  padding: 30rpx 40rpx;  
}
.info-item {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: top;
}
.info-item+.info-item {
  margin-top: 25rpx;
}
.info-item .icon {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  margin-right: 20rpx;
  margin-top: 2rpx;
}
.info-item .text {
  flex: 1;
  font-size: 32rpx;
  line-height: 34rpx;
  color: #707070;
  display: inline-block;
}
.history-tip {
  margin-top: 100rpx;
  text-align: center;
}
.history-tip .icon {
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.history-tip .tip {
  display: inline-block;
  vertical-align: middle;
  font-size: 32rpx;
  line-height: 34rpx;
  color: #909090;
}
.history-end {
  margin-top: 20rpx;
  text-align: center;
}
.history-end .tip {
  display: inline-block;
  vertical-align: middle;
  font-size: 32rpx;
  line-height: 34rpx;
  color: #909090;
}